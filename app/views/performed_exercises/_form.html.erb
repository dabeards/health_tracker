<div class="bigformdiv">
  <div class="formdiv">
    <%= form_for(@performed_exercise) do |f| %>
      <% if @performed_exercise.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@performed_exercise.errors.count, "error") %> prohibited this performed_exercise from being saved:</h2>

          <ul>
          <% @performed_exercise.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :exercise_name %><br>
        <%= f.text_field :exercise_name %>
      </div>
      <div class="select">
        <%= f.select(:exercise_type_id, options_for_select([["Shoulders", 1], ["Arms", 2], ["Back", 3], ["Chest", 4], ["Legs", 5],["Abs", 6]])) %>
      </div>
      <div class="field">
        <%= f.label :burned_calories %><br>
        <%= f.text_field :burned_calories %>
      </div>
      <div class="field">
        <%= f.label :exercise_date %><br>
        <%= f.datetime_select :exercise_date %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
