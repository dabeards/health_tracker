<p id="notice"><%= notice %></p>

<h1>Listing Performed Exercises</h1>

<table>
  <thead>
    <tr>
      <th>Burned calories</th>
      <th>Exercise date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="blocks">
    <% @performed_exercises.each do |performed_exercise| %>
      <tr>
        <td><%= performed_exercise.burned_calories %></td>
        <td><%= performed_exercise.exercise_date %></td>
        <td><%= link_to 'Show', performed_exercise %></td>
        <td><%= link_to 'Edit', edit_performed_exercise_path(performed_exercise) %></td>
        <td><%= link_to 'Destroy', performed_exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

